# Server Configuration
PORT=3000

# AI Gateway API Key (for quiz generation)
# Get your key from AI Gateway
AI_GATEWAY_API_KEY=

# Upstash Redis Configuration
# Get your credentials from https://upstash.com
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Cron Job Secret (for securing cron endpoints)
# Generate a secure random string
CRON_SECRET=

# Self Protocol Configuration
SELF_APP_NAME=Realmind Celo
SELF_SCOPE=realmind-celo
# RPC endpoint for Self Protocol blockchain verification (default: Celo mainnet)
# Options: https://forno.celo.org (Celo mainnet), https://alfajores-forno.celo-testnet.org (testnet)
SELF_RPC_ENDPOINT=https://forno.celo.org
